{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="page-wrapper">

    <!--Blog Page Start-->
    <section class="blog-page">
        <div class="container">
            <div class="row">

            {% for chantier in chantiers %}
                <!--Blog One Single Start-->
                <div class="col-xl-4 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="200ms">
                        <div class="services-one__single">
                            <div class="services-one__img">
                            <img src="{{ asset('uploads/images/' ~ chantier.cover) }}" alt="Image" style="width: 100px; height: auto;">                            
                            </div>
                            <div class="services-one__content">
                                <h3 class="services-one__title"><a href="/">{{ chantier.titre }}</a></h3>
                                <p class="services-one__text">{{chantier.desctription}}</p>
                                <div class="services-one__read-more">
                                    <a href="/couverture">Read More <i class="fa fa-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                <!--Blog One Single End-->
            {% endfor %}
            </div>
        </div>
    </section>
    <!--Blog Page End-->

</div><!-- /.page-wrapper -->
{% endblock %}
