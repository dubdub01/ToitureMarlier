<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Toiture Marlier Admin{% endblock %}
		</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
		{% block favicons %}
			<link rel="apple-touch-icon" sizes="180x180" href="/assets/images/favicons/apple-touch-icon.png"/>
			<link rel="icon" type="image/png" sizes="32x32" href="/assets/images/favicons/favicon-32x32.png"/>
			<link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicons/favicon-16x16.png"/>
			<link rel="manifest" href="/assets/images/favicons/site.webmanifest"/>
			<meta name="description" content="/Roofsie HTML 5 Template "/>
		{% endblock %}

		{{ encore_entry_link_tags('app') }}
		{% block stylesheets %}{% endblock %}
		{{ encore_entry_link_tags('app') }}
	</head>

{% block body %}
<div class="container mt-5">
    <h1>Ajouter un Chantier</h1>
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    <div class="mb-3">
        {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.titre) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.desctription, 'Description', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.desctription, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.desctription) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.cover, 'Cover Image', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.cover, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.cover) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.imgleft, 'Left Image', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.imgleft, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.imgleft) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.imgright, 'Right Image', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.imgright, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.imgright) }}
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

    {{ form_end(form) }}
</div>


{% endblock %}