<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Toiture Marlier Admin{% endblock %}
		</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
		{% block favicons %}
			<link rel="apple-touch-icon" sizes="180x180" href="/assets/images/favicons/apple-touch-icon.png"/>
			<link rel="icon" type="image/png" sizes="32x32" href="/assets/images/favicons/favicon-32x32.png"/>
			<link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicons/favicon-16x16.png"/>
			<link rel="manifest" href="/assets/images/favicons/site.webmanifest"/>
			<meta name="description" content="/Roofsie HTML 5 Template "/>
		{% endblock %}

		{{ encore_entry_link_tags('app') }}
		{% block stylesheets %}{% endblock %}
		{{ encore_entry_link_tags('app') }}
	</head>

{% block body %}

<div class="container">
    <h1 class="my-5">Gestion des chantiers</h1>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Cover</th>
                    <th>Image Gauche</th>
                    <th>Image Droite</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for chantier in chantiers %}
                    <tr>
                        <td>{{ chantier.id }}</td>
                        <td>{{ chantier.titre }}</td>
                        <td>{{ chantier.desctription }}</td>
                        <td>
                            <img src="{{ asset('uploads/images/' ~ chantier.cover) }}" alt="Image" style="width: 100px; height: auto;">                            
                        </td>
                        <td>
                            <img src="{{ asset('uploads/images/' ~ chantier.imgleft) }}" alt="Image" style="width: 100px; height: auto;">                            
                        </td>
                        <td>
                            <img src="{{ asset('uploads/images/' ~ chantier.imgright) }}" alt="Image" style="width: 100px; height: auto;">                            
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                 <a href="{{ path('app_admin_photo_edit', {'id': chantier.id}) }}" class="btn btn-primary">
            <i class="fa-solid fa-edit"></i> Modifier
        </a>
                                <form method="post" action="{{ path('app_admin_photo_delete', {'id': chantier.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce chantier ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chantier.id) }}">
                            <button class="btn">Supprimer</button>
                        </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<script src="https://kit.fontawesome.com/61eae04d09.js" crossorigin="anonymous"></script>

{% endblock %}